include ./includes/date.jade
html
    head
        link(rel="stylesheet", href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css")
        link(href="http://fonts.googleapis.com/css?family=Open+Sans", rel="stylesheet", type="text/css")
        link(rel='stylesheet', href='/css/global.css')
        link(rel='stylesheet', href='/css/create_event.css')
        link(rel='stylesheet', href="/css/timeslot.css")

        script(type="text/javascript", src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")
        script(type="text/javascript", src="//code.jquery.com/ui/1.11.1/jquery-ui.js")
        script(type="text/javascript", src="/js/create-event/main.js")
        script(type="text/javascript", src="/js/create-event/jquery.autosize.js")
        script(type="text/javascript", src="/js/create-event/jquery.autosize.min.js")
        script(type="text/javascript", src="/js/range_selection.js")

    body(class="yellowLightBackground")
        #sidebar(class="cyanDarkBackground")
            #contentWrapper
                #content
                    #infoBlock
                        textarea(name="name", id="name", class="sidebarText nonInvite", maxlength="50", placeholder="your name")
                        textarea(name="email", id="email", class="sidebarText nonInvite", maxlength="40", placeholder="your e-mail")
                        textarea(name="title", id="title", class="sidebarText nonInvite", maxlength="75", placeholder="event title")
                        textarea(name="description", id="description", class="sidebarText nonInvite", maxlength="1000", placeholder="event description")
                        .emailList
                        textarea(id="emailInvite", class="sidebarText invite", maxlength="1000", placeholder="invite by e-mail")
                        input(type="button",id="sendButton",value="Send to backend!!!!")
                    #hoursSelector
                        mixin date("hoursSelector")
        #wrapper
            table
                tr
                    - var DAYS = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];
                    - for(var dayIndex = 0; dayIndex < 7; dayIndex++)
                        td(class="dayNameHeader")=DAYS[dayIndex]
                if weekly
                - for (var dayIndex = 0; dayIndex < 7; dayIndex++)
                    mixin date(dayIndex)
